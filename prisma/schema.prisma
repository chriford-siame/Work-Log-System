generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid()) @ignore
  username String @unique @default(uuid())
  email    String @unique
  password String

  @@index([username, email])
}

model Log {
  id        String   @id @default(uuid()) @ignore
  date      DateTime
  hours     Int
  note      String
  updatedAt DateTime @updatedAt @ignore @default(now())
  createdAt DateTime @default(now())

  @@unique([id])
  @@index([hours, note, date])
}
